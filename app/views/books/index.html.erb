<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |b| %>
      <tr>
        <td><%= b.title %></td>
        <td><%= b.body %></td>
        <td>
          <%= link_to "Show" , book_path(b.id) %>
        </td>
        <td>
          <%= link_to "Edit" , edit_book_path(b.id) %>
        </td>
        <td>
          <%= link_to "Destroy" , destroy_book_path(b.id) ,method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>
<% if @book.errors.any? %>
  <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model:@book, local:true do |t| %>
    <p class="book_title">
    Title<br>
    <%= t.text_field :title %>
  </p>
  <p class="book_body">
    Body<br>
    <%= t.text_area :body %>
  </p>
  <%= t.submit "Create Book" %>
<% end %>