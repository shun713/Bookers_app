<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |b| %>
      <tr>
        <td><%= b.title %></td>
        <td><%= b.body %></td>
        <td>
          <%= link_to "Show" , book_show_path(b.id) %>
        </td>
        <td>
          <%= link_to "Edit" , book_edit_path(b.id) %>
        </td>
        <td>
          <%= link_to "Destroy" , book_destroy_path(b.id) ,method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>
<%= form_with model:@book, local:true do |t| %>
  <p class="book_title">
    Title<br>
    <%= t.text_field :title %>
  </p>
  <p class="book_body">
    Body<br>
    <%= t.text_area :body %>
  </p>
  <%= t.submit "Create Book" %>
<% end %>