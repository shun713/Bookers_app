<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |b| %>
        <td><%= b.title %></td>
        <td><%= b.body %></td>
        <td><%= link_to "Show",book_show_path(book.id) %></td>
        <td><%= link_to "Edit",book_edit_path(book.id) %></td>
        <td><%= link_to "Destroy",book_destroy_path(book.id) %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<h2>New Book</h2>
<%= form_with model:@book, local:true do |t| %>
  <%= t.text_field :title %>
  <%= t.text_area :body %>
  <%= t.submit "Create Book" %>
<% end %>